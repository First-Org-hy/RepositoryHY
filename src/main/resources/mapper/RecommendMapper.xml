<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hy.dao.RecommendDao" >
  <sql id="BASE_TABLE">
    recommend
  </sql>

  <sql id="BASE_COLUMN">
    id, housesId, userId, userName, guestName, guestPhone,
    dealState, crtTime, updateTime, dataState
  </sql>

  <insert id="insert" parameterType="com.hy.model.RecommendDomain">
    INSERT INTO
      <include refid="BASE_TABLE"/>
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="housesId != null">
        housesId,
      </if>
      <if test="userId != null">
        userId,
      </if>
      <if test="userName != null">
        userName,
      </if>
      <if test="guestName != null">
        guestName,
      </if>
      <if test="guestPhone != null">
        guestPhone,
      </if>
      <if test="dealState != null">
        dealState,
      </if>
      crtTime, updateTime,dataState
    </trim>
    <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
      <if test="housesId != null">
        #{housesId, jdbcType=VARCHAR},
      </if>
      <if test="userId != null">
        #{userId, jdbcType=VARCHAR},
      </if>
      <if test="userName != null">
        #{userName, jdbcType=VARCHAR},
      </if>
      <if test="guestName != null">
        #{guestName, jdbcType=VARCHAR},
      </if>
      <if test="guestPhone != null">
        #{guestPhone, jdbcType=VARCHAR},
      </if>
      <if test="dealState != null">
        #{dealState, jdbcType=VARCHAR},
      </if>
      CURRENT_TIMESTAMP,CURRENT_TIMESTAMP,1
    </trim>
  </insert>

  <select id="selectRecommends" resultType="com.hy.model.RecommendDomain">
      SELECT
        <include refid="BASE_COLUMN"/>
      FROM
        <include refid="BASE_TABLE"/>
  </select>


</mapper>