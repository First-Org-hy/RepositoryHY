<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hy.dao.BankInfoDao" >
  <sql id="BASE_TABLE">
    bank_info
  </sql>

  <sql id="BASE_COLUMN">
    cardId, userId, cardName, cardPhone, bank, cardNum, bankDeposit, crtTime, updateTime, dataState
  </sql>

  <insert id="insert" parameterType="com.hy.model.BankInfoDomain">
    INSERT INTO
      <include refid="BASE_TABLE"/>
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="userId != null">
        userId,
      </if>
      <if test="cardName != null">
        cardName,
      </if>
      <if test="cardPhone != null">
        cardPhone,
      </if>
      <if test="bank != null">
        bank,
      </if>
      <if test="cardNum != null">
        cardNum,
      </if>
      <if test="bankDeposit != null">
        bankDeposit,
      </if>
      crtTime, updateTime,dataState
    </trim>
    <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
      <if test="userId != null">
        #{userId, jdbcType=VARCHAR},
      </if>
      <if test="cardName != null">
        #{cardName, jdbcType=VARCHAR},
      </if>
      <if test="cardPhone != null">
        #{cardPhone, jdbcType=VARCHAR},
      </if>
      <if test="bank != null">
        #{bank, jdbcType=VARCHAR},
      </if>
      <if test="cardNum != null">
        #{cardNum, jdbcType=VARCHAR},
      </if>
      <if test="bankDeposit != null">
        #{bankDeposit, jdbcType=CHAR},
      </if>
      CURRENT_TIMESTAMP,CURRENT_TIMESTAMP,1
    </trim>
  </insert>

  <select id="selectBankInfoss" resultType="com.hy.model.BankInfoDomain">
      SELECT
        <include refid="BASE_COLUMN"/>
      FROM
        <include refid="BASE_TABLE"/>
  </select>


</mapper>