<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hy.dao.AppDao" >
  <sql id="BASE_TABLE">
    app_info
  </sql>

  <sql id="BASE_COLUMN">
    id,appName,appId,appSecret,appStatus,phone,crtTime,rcntlyTime,comment
  </sql>

  <insert id="insert" parameterType="com.hy.model.AppDomain">
    INSERT INTO
      <include refid="BASE_TABLE"/>
    <trim prefix="(" suffix=")" suffixOverrides=",">
      appId,appSecret,appName,crtTime,
      <if test="appStatus != null">
        appStatus,
      </if>
      rcntlyTime
    </trim>
    <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
      #{appId, jdbcType=VARCHAR},#{appSecret, jdbcType=VARCHAR},#{appName, jdbcType=VARCHAR},#{crtTime, jdbcType=DATE},
      <if test="appStatus != null">
        #{appStatus, jdbcType=VARCHAR},
      </if>
      CURRENT_TIMESTAMP
    </trim>
  </insert>

  <select id="selectApps" resultType="com.hy.model.AppDomain">
      SELECT
        <include refid="BASE_COLUMN"/>
      FROM
        <include refid="BASE_TABLE"/>
  </select>


</mapper>